@using XafSolution.Module.BusinessObjects
@using System.Web.Script.Serialization

@model AspNetCoreMvcApplication.TypePermission
@{

	var serializer = new JavaScriptSerializer();
}
<link rel="stylesheet" type="text/css" href="~/css/vendor.css" />

<title>Employees</title>
<script src="~/js/IndexCode.js"></script>

<div style="text-align: right; margin: 10px">
	@(Html.DevExtreme().Button()
				.ID("Logout")
				.Text("Log Out")
				.Type(ButtonType.Normal)
				.OnClick("onClick")
	)
</div>
<div>
	@(Html.DevExtreme().DataGrid<Employee>()
		.ID("gridContainer")
			.ShowBorders(true)
			.Height(900)
			.RemoteOperations(true)
			.ColumnAutoWidth(true)
			.CacheEnabled(false)
			.FilterRow(filterRow => filterRow.Visible(true))
			.GroupPanel(groupPanel => groupPanel.Visible(Mode.Auto))
			.Grouping(grouping => grouping.AutoExpandAll(false))
			.OnInitialized(string.Format("onInitialized({0})", serializer.Serialize(Model.Data)))
			.OnCellPrepared("onCellPrepared")
			.OnEditorPreparing("onEditorPreparing")
			.Editing(editing => editing
				.Mode(GridEditMode.Form)
				.AllowAdding(Model.Create)
				.AllowDeleting(new JS("allowDeleting"))
				.AllowUpdating(new JS("allowUpdating")))
			.DataSource(employeesDataSourse => employeesDataSourse.Mvc().Controller("Employees")
				.LoadAction("Get")
				.InsertAction("Add")
				.UpdateAction("Update")
				.DeleteAction("Delete")
				.Key("Oid")
				.OnLoaded("onLoaded")
			)
			.Columns(columns => {
				columns.Add()
					.Caption("Employee")
					.Columns(employeeColumns => {
						employeeColumns.Add()
							.Caption("First name")
							.DataField("FirstName");
						employeeColumns.Add()
							.Caption("Last name")
							.DataField("LastName");
					});
				columns.Add()
					.Caption("Email")
					.DataField("Email");
				columns.Add()
					.Caption("Department")
					.DataField("Department.Oid")
					.Lookup(department => {
						department.DataSource(departmentDataSourse => departmentDataSourse.Mvc().Controller("Departments")
							.LoadAction("Get")
							.InsertAction("Add")
							.UpdateAction("Update")
							.DeleteAction("Delete")
							.Key("Oid"))
						.ValueExpr("Oid")
						.DisplayExpr("Title");
					});
			})
	)
</div>